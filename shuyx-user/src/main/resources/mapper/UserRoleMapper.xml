<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shuyx.shuyxuser.mapper.UserRoleMapper">
    <select id="selectUserListByRoleId">
        SELECT u.user_id,u.user_name,u.status
        FROM t_user u
        LEFT JOIN t_user_role ur on u.user_id = ur.user_id
        <where>
            <if test="roleId != null">
                AND ur.role_id = #{roleId}
            </if>
        </where>
    </select>
    <select id="selectUserListByNoRoleId" parameterType="com.shuyx.shuyxuser.dto.UserRoleDTO">
        SELECT u.user_id,u.user_name,u.status FROM t_user u where u.user_id not in
        <if test=" roleId != null ">
            ( SELECT user_id FROM t_user_role where role_id = #{roleId} )
        </if>
        <if test=" userName != null and userName != '' ">
            AND u.user_name like concat('%', #{userName}, '%')
        </if>
    </select>

    <insert id="batchInsertUserRole">
        insert into t_user_role(user_id, role_id, status) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId},#{item.roleId},#{item.status})
        </foreach>
    </insert>

    <delete id="batchDeleteUserRole">
        DELETE FROM t_user_role
        <where>
            (user_id,role_id) in
            <foreach item="item" index="index" collection="list" separator="," open="(" close=")">
                (#{item.userId},#{item.roleId})
            </foreach>
        </where>
    </delete>
</mapper>
